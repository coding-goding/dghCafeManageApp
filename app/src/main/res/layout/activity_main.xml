<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="353dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/menuText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/npsfont_regular"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/npsfont_regular"
            android:gravity="center"
            android:textSize="48sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/teacherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/npsfont_regular"
        android:text="교직원 ***"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="176dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="97dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherText">

        <TextView
            android:id="@+id/assignTextA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/npsfont_regular"
            android:text="비밀번호 입력 후 버튼을 눌러주세요."
            android:textSize="24sp" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/npsfont_regular"
            android:hint="비밀번호 입력"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/assignButton"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:background="#A5A5A5"
            android:fontFamily="@font/npsfont_regular"
            android:text="확인"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/assignTextB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/npsfont_regular"
            android:text="인증되었습니다. 식사 맛있게 드세요."
            android:textColor="#D10909"
            android:textSize="24sp"
            android:visibility="invisible"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>